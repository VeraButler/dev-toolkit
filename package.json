{
  "name": "dev-toolkit-monorepo",
  "version": "0.0.0",
  "description": "Monorepo configuration for dev-toolkit",
  "main": "index.js",
  "scripts": {
    "build": "mono-rail build",
    "watch": "mono-rail watch",
    "link": "mono-rail link",
    "unlink": "mono-rail unlink",
    "publish": "mono-rail publish",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "mono-rail": {
    "commands": {
      "sequential": "build",
      "concurrent": "watch"
    },
    "packages": {
      "dev-toolkit": {
        "build": "babel packages/dev-toolkit/src --presets es2015 --out-dir packages/dev-toolkit/dist",
        "watch": "babel packages/dev-toolkit/src --presets es2015 --watch --out-dir packages/dev-toolkit/dist"
      },
      "dynamic-pages": {
        "build": "babel packages/dynamic-pages/src --presets es2015 --out-dir packages/dynamic-pages/dist",
        "watch": "babel packages/dynamic-pages/src --presets es2015 --watch --out-dir packages/dynamic-pages/dist"
      }
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/stoikerty/dev-toolkit.git"
  },
  "author": "Jorge Antunes",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/stoikerty/dev-toolkit/issues"
  },
  "homepage": "https://github.com/stoikerty/dev-toolkit#readme",
  "devDependencies": {
    "babel-cli": "^6.16.0",
    "babel-preset-es2015": "^6.16.0",
    "better-npm-run": "0.0.11"
  }
}
