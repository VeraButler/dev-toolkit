{
  "name": "universal-dev-toolkit",
  "version": "4.1.2",
  "description": "{ Universal Development Toolkit }",
  "main": "index.js",
  "scripts": {
    "start": "npm install && better-npm-run copy-example-files && better-npm-run install-src-dependencies",
    "reinstall": "npm install && better-npm-run install-src-dependencies",
    "dev": "better-npm-run development",
    "build": "better-npm-run build",
    "server": "better-npm-run server",
    "static-server": "better-npm-run static-server",
    "lint": "cd src && eslint --no-eslintrc --config .eslintrc . && cd .."
  },
  "bin": {
    "udt-dev": "bin/dev.js",
    "udt-build": "bin/build.js",
    "udt-server": "bin/server.js"
  },
  "betterScripts": {
    "copy-example-files": {
      "command": "ncp toolkit/documentation/src_example_files src"
    },
    "install-src-dependencies": {
      "command": "cd src && npm install && cd .."
    },
    "development": {
      "command": "babel-node toolkit/webpack/development.js",
      "env": {
        "NODE_ENV": "development"
      }
    },
    "build": {
      "command": "rimraf build && babel-node toolkit/webpack/generateBuild.js",
      "env": {
        "NODE_ENV": "production",
        "SERVER_RENDERING": "false"
      }
    },
    "server": {
      "command": "rimraf build && babel-node toolkit/webpack/server.js",
      "env": {
        "NODE_ENV": "production",
        "SERVER_RENDERING": "true"
      }
    },
    "static-server": {
      "command": "babel-node toolkit/utilities/staticServer.js"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/stoikerty/universal-dev-toolkit.git"
  },
  "keywords": [
    "stoikerty",
    "webpack",
    "sass",
    "react",
    "browserify",
    "gulp",
    "moonboots",
    "middleman",
    "stk-toolkit",
    "universal-dev-toolkit"
  ],
  "author": "Jorge Antunes",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/stoikerty/universal-dev-toolkit/issues"
  },
  "homepage": "https://github.com/stoikerty/universal-dev-toolkit#readme",
  "devDependencies": {
    "autoprefixer": "^6.3.3",
    "babel-cli": "^6.6.5",
    "babel-core": "^6.7.2",
    "babel-eslint": "^6.0.4",
    "babel-loader": "^6.2.4",
    "babel-preset-es2015": "^6.6.0",
    "babel-preset-react": "^6.5.0",
    "babel-preset-stage-1": "^6.5.0",
    "babel-root-import": "^3.2.2",
    "better-npm-run": "0.0.8",
    "browser-sync": "^2.11.1",
    "browser-sync-webpack-plugin": "^1.0.1",
    "copy-webpack-plugin": "^1.1.1",
    "css-loader": "^0.23.1",
    "css-modules-require-hook": "^4.0.0",
    "eslint": "^2.10.2",
    "eslint-config-airbnb": "^7.0.0",
    "eslint-loader": "^1.3.0",
    "eslint-plugin-import": "^1.6.1",
    "eslint-plugin-jsx-a11y": "^0.6.2",
    "eslint-plugin-react": "^4.3.0",
    "extract-text-webpack-plugin": "^1.0.1",
    "file-loader": "^0.8.5",
    "files-require-hook": "^1.0.0",
    "handlebars": "^4.0.5",
    "handlebars-loader": "^1.3.0",
    "html-webpack-plugin": "^2.17.0",
    "image-webpack-loader": "^1.8.0",
    "json-loader": "^0.5.4",
    "jsx-control-statements": "^3.1.0",
    "ncp": "^2.0.0",
    "node-sass": "^3.4.2",
    "postcss-loader": "^0.8.2",
    "redbox-react": "^1.2.2",
    "rimraf": "^2.5.2",
    "sass-loader": "^3.2.0",
    "style-loader": "^0.13.0",
    "webpack": "^1.12.14",
    "webpack-dev-middleware": "^1.5.1",
    "webpack-hot-middleware": "^2.10.0"
  },
  "dependencies": {
    "body-parser": "^1.15.1",
    "compression": "^1.6.2",
    "errorhandler": "^1.4.3",
    "express": "^4.13.4",
    "method-override": "^2.3.6",
    "path": "^0.12.7"
  }
}
